g++ -m32 $CXXFLAGS $OBJFILES pnccdPedestalCalculator.o -Wl,-rpath=$ROOTSYS/lib:$PWD/release/build/pdsdata/lib/$ARCH/ `$ROOTSYS/bin/root-config --libs` -Lrelease/build/pdsdata/lib/$ARCH/ $PDSLIBS -o pnccdPedestalCalculator


